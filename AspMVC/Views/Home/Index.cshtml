@model bool
<div class="mb3 mt-5" style="margin-inline:25%">
    <h1 class="display-6 text-center mb-3">Dynamic Chart Application</h1>
    <form method="post">
        <input type="text" class="form-control" id="ServerIp" name="ServerIp" placeholder="Ip Adress" minlength="7" maxlength="15" size="15" pattern="^((\d{1,2}|1\d\d|2[0-4]\d|25[0-5])\.){3}(\d{1,2}|1\d\d|2[0-4]\d|25[0-5])$" required />
        <label for="loginServerFormServerIpLabel" class="form-label">Server Ip</label>
        <input type="text" class="form-control" id="DatabaseName" name="DatabaseName" placeholder="Database Name" required />
        <label for="loginServerFormDatabaseNameLabel" class="form-label">Database Name</label>
        <input type="text" class="form-control" id="User" name="User" placeholder="User" required />
        <label for="loginServerFormUserLabel" class="form-label">User</label>
        <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required />
        <label for="loginServerFormPasswordLabel" class="form-label">Password</label><br />
        <button type="submit" class="btn btn-primary mb-3" style="width:100%;">Connect to Database</button>
    </form>
</div>
@if (Model==false){
    <script>alert("Database connection informations are wrong please enter again!")</script>
}